[Unit]
Description=Notification Tray - FreeDesktop notification daemon
Documentation=https://github.com/ctrl-q/notification-tray
After=graphical-session.target
PartOf=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/notification-tray %h/.local/share/notification-tray
Restart=on-failure
RestartSec=5

# Security hardening
ProtectSystem=strict

# Resource limits
Nice=0

[Install]
WantedBy=graphical-session.target
